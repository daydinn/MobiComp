<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <!-- set iconified by default to false -->

        </RelativeLayout>

        <TextView
            android:id="@+id/RecipieTitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HomePage"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/simpleSearchView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/relLayout1"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <SearchView

            android:id="@+id/simpleSearchView"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:iconifiedByDefault="false"
            android:queryHint="Search here"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <!-- set iconified by default to false -->

    <LinearLayout
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="600dp"
        android:layout_weight="1"
        android:src="@drawable/baseline_home_32"
        app:layout_constraintTop_toBottomOf="@+id/simpleSearchView"
        tools:layout_editor_absoluteX="77dp" />


        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="600dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_search_32"
            app:layout_constraintTop_toBottomOf="@+id/simpleSearchView"
            tools:layout_editor_absoluteX="77dp" />

    <ImageView
        android:id="@+id/recipiesIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_weight="1"
        android:src="@drawable/baseline_cookie_32"
        app:layout_constraintLeft_toLeftOf="@+id/homeIcon"
        app:layout_constraintTop_toBottomOf="@+id/simpleSearchView"
        tools:layout_editor_absoluteX="260dp" />

        <ImageView
            android:id="@+id/favoritesIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_star_32"
            app:layout_constraintLeft_toLeftOf="@+id/homeIcon"
            app:layout_constraintTop_toBottomOf="@+id/simpleSearchView"
            tools:layout_editor_absoluteX="260dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

